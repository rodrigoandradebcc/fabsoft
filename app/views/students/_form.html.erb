<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Student</h3>
      </div>
      <br>
      	<div class="panel-body">
		  	<%= simple_form_for @student, :html => { :class => 'form-horizontal' } do |f| %>
		  		<%= f.error_notification %>
		  		<div class="form-inputs">
			  		<div class="form-group">
				  		<div class="col-xs-2">
				  		    <%= f.input :login, :required => true, :autofocus => true %>
			  		  	</div>
		  		  	</div>


					<div class="form-group">
				  		<div class="col-xs-4">
					    	<%= f.input :email %>
						</div>
		  		  	</div>

		  		  	<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :password %>
			  				</div>
	  				</div>

		  		  	<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :password_confirmation %>
		  				</div>
	  				</div>

		  		  	<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :name %>
		  				</div>
	  				</div>

		  		  	<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :institution %>
		  				</div>
	  				</div>

	  				<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :semester %>
		  				</div>
	  				</div>
	  				<div class="form-group">
	  		  			<div class="col-xs-3">
	  		  				<%= f.input :image %>
		  				</div>
	  				</div>
					
				</div>
	  			<br>

	      		<div class="well">
			    	<%= f.button :submit, class: "btn btn-primary" %>
	  				<%= link_to 'Back', students_path, class: "btn btn-default" %>
	      		</div>
			<% end %>
		</div>
    </div>
  </div>
</div>

<script type="text/javascript">
	$('[data-behaviour~=datepicker]').datepicker({
	"format": "yyyy-mm-dd",
	"weekStart": 1,
	"autoclose": true
	});
</script>

<script type="text/javascript">
	jQuery(function($){
	   		$("#phone").mask("(999) 999-9999");
	   		$("#cellphone").mask("(999) 999-9999");
	   		$("#cpf").mask("999.999.999-99");
	});
</script>