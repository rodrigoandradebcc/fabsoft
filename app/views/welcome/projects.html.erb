<div class="page-header">
  <h2>Projects</h2>
</div>

<div class="row featurette">
  <% @projects.each do |project| %>
   <div class="col-md-10">
      <h2 class="featurette-heading"><%= project.name %></h2><br>
      <p class="lead">Description:<span class="text-muted"> <%= raw(project.description) %></span></p>
      <p><%= link_to "WebSite!", project.url, class: "btn btn-primary" %></p>
      <hr>
   </div>
   <div class="col-md-1">
     <%= image_tag project.image_url(:thumb), alt: "Generic placeholder image", class: "img-rounded" %>
   </div>

   <% end %>
 </div> <!-- end row -->

