<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">User</h3>
      </div>
      <br>
        <div class="panel-body">
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :login, :required => true, :autofocus => true %>
                </div>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

              <div class="form-group">
                  <div class="col-xs-4">
                    <%= f.input :email %>
                </div>
              </div>

              <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
                  </div>
              </div>
              
              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :password_confirmation, :required => false %>
                </div>
              </div>

              <div class="form-group">    
                <div class="col-xs-3">    
                  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                    <%= f.input :name %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :phone, input_html: { id: "phone" } %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :cellphone, input_html: { id: "cellphone" } %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :rg %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :cpf, input_html: { id: "cpf" } %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-2">
                  <%= f.input :entry_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}} %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-9">
                  <%= f.input :address %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :facebook %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :twitter %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :github %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :gplus, label: "Google Plus" %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.input :linkedin %>
                </div>
              </div>

              <div class="form-group">
                      <div class="col-xs-3">
                        <%= f.input :image %>
                      </div>
                    </div>
              </div>

            <div class="form-actions">
              <%= f.button :submit, "Update", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

<h3>Cancel my account</h3>
<p>
  <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger btn-sm" %>
  <%= link_to "Back", :back, class: "btn btn-default btn-sm" %>
</p>



<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
  "format": "yyyy-mm-dd",
  "weekStart": 1,
  "autoclose": true
  });
</script>

<script type="text/javascript">
  jQuery(function($){
        $("#phone").mask("(999) 999-9999");
        $("#cellphone").mask("(999) 999-9999");
        $("#cpf").mask("999.999.999-99");
  });
</script>
